<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="false">

    <dev.jahir.frames.ui.widgets.PortraitImageView
        android:id="@+id/device_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:heightMultiplier="@dimen/heightMultiplier"
        app:overlayColor="@color/wallpaper_overlay"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Frames.Wallpapers" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingTop="24dp"
            android:paddingEnd="24dp">

            <ProgressBar
                android:id="@+id/component_progress"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <dev.jahir.kuper.ui.widgets.SquaredImageView
                android:id="@+id/component_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxWidth="56dp"
                android:maxHeight="56dp"
                android:scaleType="fitCenter" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/component_details_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/component_name"
                    style="@style/TextStyle.Frames.WallpaperTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="My Component" />

                <TextView
                    android:id="@+id/component_app"
                    style="@style/TextStyle.Frames.WallpaperSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="Kuper" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/launch_app_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="4dp"
                android:background="?actionBarItemBackground"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_open_app"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>